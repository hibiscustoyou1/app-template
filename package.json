{
  "name": "app-template",
  "version": "1.0.0",
  "scripts": {
    "install:all": "pnpm i -r",
    "dev": "pnpm --filter server dev & pnpm --filter client dev",
    "build:app": "pnpm --filter './apps/*' --parallel build",
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm build:app && pnpm move:dist",
    "move:dist": "mkdir -p dist && cp .env dist/.env && mv apps/client/dist dist/client && mv apps/server/dist dist/server",
    "start": "node dist/server/index.js",
    "db:migrate": "dotenv -e .env -- pnpm --filter server prisma:migrate",
    "db:gen": "dotenv -e .env -- pnpm --filter server prisma:gen"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0"
  },
  "packageManager": "pnpm@10.21.0",
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}
